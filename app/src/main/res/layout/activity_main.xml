<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Display"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="40dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Add"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="15dp"
        android:text="+"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/PowerOf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Subtract"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="15dp"
        android:text="-"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Negate"
        app:layout_constraintStart_toEndOf="@+id/Add"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Multiply"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="15dp"
        android:text="*"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Smiley"
        app:layout_constraintEnd_toStartOf="@+id/Divide"
        app:layout_constraintStart_toEndOf="@+id/Subtract"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Divide"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:text="/"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/PowerOf"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="15dp"
        android:text="^"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Zero"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Negate"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="15dp"
        android:text="N"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/DecimalPoint"
        app:layout_constraintStart_toEndOf="@+id/PowerOf" />

    <Button
        android:id="@+id/Smiley"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginBottom="15dp"
        android:text=":)"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/One"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toStartOf="@+id/Clear"
        app:layout_constraintStart_toEndOf="@+id/Negate" />

    <Button
        android:id="@+id/Clear"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:text="C"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Equals"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/Zero"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="15dp"
        android:text="0"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Two"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/DecimalPoint"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="15dp"
        android:text="."
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Three"
        app:layout_constraintStart_toEndOf="@+id/Zero" />

    <Button
        android:id="@+id/One"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginBottom="15dp"
        android:text="1"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Four"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toStartOf="@+id/Equals"
        app:layout_constraintStart_toEndOf="@+id/DecimalPoint" />

    <Button
        android:id="@+id/Equals"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:text="="
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Five"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Two"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="15dp"
        android:text="2"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Six"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Three"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="15dp"
        android:text="3"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Seven"
        app:layout_constraintStart_toEndOf="@+id/Two" />

    <Button
        android:id="@+id/Four"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="15dp"
        android:text="4"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Eight"
        app:layout_constraintEnd_toStartOf="@+id/Five"
        app:layout_constraintStart_toEndOf="@+id/Three" />

    <Button
        android:id="@+id/Five"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="50dp"
        android:text="5"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Nine"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/Six"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="50dp"
        android:text="6"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Seven"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="50dp"
        android:text="7"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/Six" />

    <Button
        android:id="@+id/Eight"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="8"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Nine"
        app:layout_constraintStart_toEndOf="@+id/Seven" />

    <Button
        android:id="@+id/Nine"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="9"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>